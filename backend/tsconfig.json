{
  "compilerOptions": {
      "module": "ES2020",
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": ".",
      "strictNullChecks": true,
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*",
      "src/tests/**/*"
  ]
}